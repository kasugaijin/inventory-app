<%= form_with(model: inventory) do |form| %>
  <div>
    <%= form.label :product_name %><br>
    <%= form.text_field :product_name %>
    <% inventory.errors.full_messages_for(:product_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :warehouse_id %><br>
    <%= form.collection_select :warehouse_id, Warehouse.all, :id, :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
